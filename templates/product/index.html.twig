{% extends 'base.html.twig' %}

{% block title %}Tous nos produits - Awen{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Tous nos produits</h1>
        <p class="text-gray-600">Découvrez les créations uniques de nos artisans</p>
    </div>
    
    {% if products|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for product in products %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="h-48 overflow-hidden">
                        {% if product.mainImage %}
                            <img src="{{ product.mainImage.path }}" 
                                alt="{{ product.mainImage.alt }}"
                                class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">{{ product.name }}</h3>
                        
                        <div class="flex flex-wrap gap-1 mb-3">
                            {% for category in product.categories %}
                                <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs">
                                    {{ category.name }}
                                </span>
                            {% endfor %}
                        </div>
                        
                        <div class="flex justify-between items-baseline mb-3">
                            <p class="text-gray-600 text-xs">
                                Par <a href="{{ path('creator_show', {id: product.creator.id}) }}" class="text-primary hover:underline">{{ product.creator.creatorInfo.displayName }}</a>
                            </p>
                        </div>
                        
                        <p class="text-gray-600 text-sm mb-3">
                            {{ product.shortDescription|u.truncate(70, '...') }}
                        </p>
                        
                        <p class="text-lg font-bold text-gray-800 mb-4">
                            {% if product.price %}
                                {{ (product.price / 100)|format_currency('EUR') }}
                            {% else %}
                                Prix sur demande
                            {% endif %}
                        </p>
                        
                        <a href="{{ path('product_show', {id: product.id}) }}" class="block w-full text-center bg-primary text-white py-2 rounded hover:bg-opacity-90 transition-colors">
                            Voir le produit
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-12">
            <p class="text-gray-500">Aucun produit n'est disponible pour le moment.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
