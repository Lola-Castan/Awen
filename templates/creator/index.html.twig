{% extends 'base.html.twig' %}

{% block title %}Nos Créateurs - Awen{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Nos créateurs</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for creator in creators %}
            <a href="{{ path('creator_show', {id: creator.id}) }}" class="block">
                <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
                    {% if creator.creatorInfo.coverImage %}
                        <img src="{{ asset('uploads/images/' ~ creator.creatorInfo.coverImage) }}" 
                            alt="{{ creator.creatorInfo.displayName }}"
                            class="w-full h-48 object-cover">
                    {% else %}
                        <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                    {% endif %}
                    
                    <div class="p-5">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2">{{ creator.creatorInfo.displayName }}</h2>
                        <p class="text-sm text-gray-500 mb-3">{{ creator.products|length }} produit(s)</p>
                        <p class="text-gray-600 mb-4">
                            {{ creator.creatorInfo.description|u.truncate(100, '...') }}
                        </p>
                    </div>
                </div>
            </a>
        {% else %}
            <div class="col-span-full text-center py-12">
                <p class="text-gray-500">Aucun créateur n'est disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}