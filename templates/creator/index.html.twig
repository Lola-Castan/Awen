{% extends 'base.html.twig' %}

{% block title %}Nos Créateurs - Awen{% endblock %}

{% block body %}
<div class="container">
    <h1>Nos créateurs</h1>
    
    <div class="creators-grid">
        {% for creator in creators %}
            <div class="creator-card">
                {% if creator.creatorInfo.coverImage %}
                    <img src="{{ asset('uploads/images/' ~ creator.creatorInfo.coverImage) }}" alt="{{ creator.creatorInfo.displayName }}">
                {% else %}
                    <div class="placeholder-image">
                        <span>Pas d'image</span>
                    </div>
                {% endif %}
                
                <div class="creator-info">
                    <h2>{{ creator.creatorInfo.displayName }}</h2>
                    <p class="product-count">{{ creator.products|length }} produit(s)</p>
                    <p>
                        {{ creator.creatorInfo.description|u.truncate(100, '...') }}
                    </p>
                </div>
                <div>
                    <a href="{{ path('app_creator_show', {id: creator.id}) }}" class="view-profile">Voir le profil</a>
                </div>
            </div>
        {% else %}
            <div>
                <p>Aucun créateur n'est disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}