{% extends 'base.html.twig' %}

{% block title %}{{ creator.creatorInfo.displayName }} - Awen{% endblock %}

{% block body %}
<div class="container">
    <!-- En-tête du profil créateur -->
    <div class="creator-profile">
        <div class="creator-image">
            {% if creator.creatorInfo.coverImage %}
                <img src="{{ asset('uploads/images/' ~ creator.creatorInfo.coverImage) }}" alt="{{ creator.creatorInfo.displayName }}">
            {% else %}
                <div class="placeholder-image">
                    <span>Pas d'image</span>
                </div>
            {% endif %}
        </div>
        <div class="creator-details">
            <h1>{{ creator.creatorInfo.displayName }}</h1>
            
            <p class="creator-description">{{ creator.creatorInfo.description }}</p>
            
            <div class="creator-categories">
                <h3>Catégories</h3>
                <div class="category-tags">
                    {% for category in creator.categories %}
                        <span class="category-tag">{{ category.name }}</span>
                    {% else %}
                        <span class="no-category">Aucune catégorie</span>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Réseaux sociaux et site web -->
            <div class="creator-social">
                {% if creator.creatorInfo.website %}
                    <a href="{{ creator.creatorInfo.website }}" target="_blank">
                        Site web
                    </a>
                {% endif %}
                
                {% if creator.creatorInfo.instagramProfile %}
                    <a href="{{ creator.creatorInfo.instagramProfile }}" target="_blank">
                        Instagram
                    </a>
                {% endif %}
                
                {% if creator.creatorInfo.facebookProfile %}
                    <a href="{{ creator.creatorInfo.facebookProfile }}" target="_blank">
                        Facebook
                    </a>
                {% endif %}
                
                {% if creator.creatorInfo.pinterestProfile %}
                    <a href="{{ creator.creatorInfo.pinterestProfile }}" target="_blank">
                        Pinterest
                    </a>
                {% endif %}
            </div>
            
            {% if creator.creatorInfo.practicalInfos %}
                <div class="practical-info">
                    <h3>Informations pratiques</h3>
                    <p>{{ creator.creatorInfo.practicalInfos }}</p>
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Produits du créateur -->
    <h2>Ses créations</h2>
    
    <div class="products-grid">
        {% for product in creator.products %}
            {% if product.status.value == 'published' %}
                <div class="product-card">
                    <div class="product-image">
                        {% if product.mainImage %}
                            <img src="{{ product.mainImage.path }}" alt="{{ product.mainImage.alt }}">
                        {% else %}
                            <div class="placeholder-image">
                                <span>Pas d'image</span>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="product-info">
                        <h3>{{ product.name }}</h3>
                        
                        <div class="product-categories">
                            {% for category in product.categories %}
                                <span class="category-tag small">{{ category.name }}</span>
                            {% endfor %}
                        </div>
                        
                        <p class="product-description">
                            {{ product.shortDescription|u.truncate(70, '...') }}
                        </p>
                        
                        <p class="product-price">
                            {% if product.price %}
                                {{ (product.price / 100)|format_currency('EUR') }}
                            {% else %}
                                Prix sur demande
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <a href="#" class="view-product">Voir le produit</a>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <div class="no-products">
                <p>Ce créateur n'a pas encore de produits publiés.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}