{% extends 'base.html.twig' %}

{% block title %}{{ creator.creatorInfo.displayName }} - Awen{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <!-- En-tête du profil créateur -->
    <div class="flex flex-col md:flex-row gap-8 mb-12">
        <div class="w-full md:w-1/3">
            {% if creator.creatorInfo.coverImage %}
                <img src="{{ asset('uploads/images/' ~ creator.creatorInfo.coverImage) }}" 
                    alt="{{ creator.creatorInfo.displayName }}"
                    class="w-full rounded-lg shadow-md">
            {% else %}
                <div class="w-full h-64 bg-gray-100 rounded-lg shadow-md flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
            {% endif %}
        </div>
        
        <div class="w-full md:w-2/3">
            <div class="flex justify-between items-start mb-4">
                <h1 class="text-3xl font-bold text-gray-800">{{ creator.creatorInfo.displayName }}</h1>
                {% if app.user and app.user.id == creator.id %}
                    <a href="{{ path('creator_edit', {'id': creator.id}) }}" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Modifier mon profil
                    </a>
                {% endif %}
            </div>
            
            <p class="text-gray-600 mb-6">{{ creator.creatorInfo.description }}</p>
            
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Catégories</h3>
                <div class="flex flex-wrap gap-2">
                    {% for category in creator.categories %}
                        <span class="bg-primary bg-opacity-10 text-primary px-3 py-1 rounded-full text-sm">
                            {{ category.name }}
                        </span>
                    {% else %}
                        <span class="text-gray-500">Aucune catégorie</span>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Réseaux sociaux et site web -->
            <div class="flex flex-wrap gap-4 mb-6">
                {% if creator.creatorInfo.website %}
                    <a href="{{ creator.creatorInfo.website }}" target="_blank" 
                       class="flex items-center text-gray-700 hover:text-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                        </svg>
                        Site web
                    </a>
                {% endif %}
                
                {% if creator.creatorInfo.instagramProfile %}
                    <a href="{{ creator.creatorInfo.instagramProfile }}" target="_blank" 
                       class="flex items-center text-gray-700 hover:text-pink-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                        Instagram
                    </a>
                {% endif %}
                
                {% if creator.creatorInfo.facebookProfile %}
                    <a href="{{ creator.creatorInfo.facebookProfile }}" target="_blank" 
                       class="flex items-center text-gray-700 hover:text-blue-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                        </svg>
                        Facebook
                    </a>
                {% endif %}
                
                {% if creator.creatorInfo.pinterestProfile %}
                    <a href="{{ creator.creatorInfo.pinterestProfile }}" target="_blank" 
                       class="flex items-center text-gray-700 hover:text-red-600 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
                        </svg>
                        Pinterest
                    </a>
                {% endif %}
            </div>
              {% if creator.creatorInfo.practicalInfos %}
                <div class="bg-gray-50 p-4 rounded-md">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Informations pratiques</h3>
                    <p class="text-gray-600">{{ creator.creatorInfo.practicalInfos }}</p>
                </div>
            {% endif %}
        </div>
    </div>    <!-- Onglets -->
    <div class="border-b border-gray-200 mb-8">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            {% set current_tab = app.request.query.get('tab', 'products') %}
            <a href="{{ path('creator_show', {'id': creator.id, 'tab': 'products'}) }}" 
               class="tab-link {{ current_tab == 'products' ? 'border-primary text-primary' : 'border-transparent text-gray-500' }} border-b-2 py-4 px-1 text-sm font-medium hover:text-gray-700 hover:border-gray-300">
                Produits
            </a>
            <a href="{{ path('creator_show', {'id': creator.id, 'tab': 'posts'}) }}" 
               class="tab-link {{ current_tab == 'posts' ? 'border-primary text-primary' : 'border-transparent text-gray-500' }} border-b-2 py-4 px-1 text-sm font-medium hover:text-gray-700 hover:border-gray-300">
                Posts
            </a>
            <a href="{{ path('creator_show', {'id': creator.id, 'tab': 'events'}) }}" 
               class="tab-link {{ current_tab == 'events' ? 'border-primary text-primary' : 'border-transparent text-gray-500' }} border-b-2 py-4 px-1 text-sm font-medium hover:text-gray-700 hover:border-gray-300">
                Événements
            </a>
        </nav>
    </div>

    <!-- Contenu des onglets -->    {% set current_tab = app.request.query.get('tab', 'products') %}    <div class="tab-content {{ current_tab == 'products' ? '' : 'hidden' }}" id="products-content">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for product in creator.products %}
                {% if product.status.value == 'published' %}
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                        <div class="h-48 overflow-hidden">
                            {% if product.mainImage %}
                                <img src="{{ product.mainImage.path }}" 
                                    alt="{{ product.mainImage.alt }}"
                                    class="w-full h-full object-cover">
                            {% else %}
                                <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="p-4">
                            <h3 class="text-lg font-semibold text-gray-800 mb-2">{{ product.name }}</h3>
                            
                            <div class="flex flex-wrap gap-1 mb-3">
                                {% for category in product.categories %}
                                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs">
                                        {{ category.name }}
                                    </span>
                                {% endfor %}
                            </div>
                            
                            <p class="text-gray-600 text-sm mb-3">
                                {{ product.shortDescription|u.truncate(70, '...') }}
                            </p>
                            
                            <p class="text-lg font-bold text-gray-800 mb-4">
                                {% if product.price %}
                                    {{ (product.price / 100)|format_currency('EUR') }}
                                {% else %}
                                    Prix sur demande
                                {% endif %}
                            </p>
                            
                            <a href="{{ path('product_show', {id: product.id}) }}" class="block w-full text-center bg-primary text-white py-2 rounded hover:bg-opacity-90 transition-colors">
                                Voir le produit
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="col-span-full text-center py-12">
                    <p class="text-gray-500">Ce créateur n'a pas encore de produits publiés.</p>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="tab-content {{ current_tab == 'posts' ? '' : 'hidden' }}" id="posts-content">
        <div class="space-y-6">
            {% for post in creator.posts %}
                <article class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">{{ post.title }}</h2>
                    <p class="text-gray-600 mb-4">{{ post.content|slice(0, 200) }}...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-500">{{ post.createdAt|date('d/m/Y') }}</span>
                        <a href="{{ path('post_show', {'id': post.id}) }}" 
                           class="text-primary hover:text-indigo-700 font-medium">
                            Lire la suite
                        </a>
                    </div>
                </article>
            {% else %}
                <p class="text-gray-500">Aucun post pour le moment</p>
            {% endfor %}
        </div>
    </div>

    <div class="tab-content {{ current_tab == 'events' ? '' : 'hidden' }}" id="events-content">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">            {% for event in creator.organizedEvents %}
                <article class="bg-white rounded-lg shadow-md overflow-hidden {% if event.status.value == 'cancelled' %}border-2 border-red-500{% endif %}">
                    <div class="h-48 overflow-hidden relative">
                        {% if event.images|length > 0 %}
                            <img src="{{ asset('uploads/images/' ~ event.images[0].filename) }}" 
                                 alt="{{ event.images[0].alt }}" 
                                 class="w-full h-full object-cover {% if event.status.value == 'cancelled' %}opacity-60{% endif %}">
                        {% else %}
                            <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                        {% endif %}
                        {% if event.status.value == 'cancelled' %}
                            <div class="absolute inset-0 flex justify-center items-center">
                                <span class="bg-red-600 text-white px-4 py-1 rounded-md font-bold transform rotate-12">ANNULÉ</span>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ event.title }}</h3>
                        <p class="text-gray-600 mb-4">{{ event.shortDescription }}</p>
                        <div class="flex items-center justify-between">
                            <div class="text-sm text-gray-500">
                                <div class="flex items-center mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    {{ event.startDateTime|date('d/m/Y à H:i') }}
                                </div>
                                {% if event.location %}
                                    <div class="flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        {{ event.location }}
                                    </div>
                                {% endif %}
                            </div>
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" 
                               class="text-primary hover:text-indigo-700 font-medium">
                                En savoir plus →
                            </a>
                        </div>
                    </div>
                </article>
            {% else %}
                <p class="text-gray-500">Aucun événement pour le moment</p>
            {% endfor %}
        </div>
    </div>    </div>
</div>
{% endblock %}