{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <!-- En-tête du profil -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
            <!-- Bannière du profil (optionnelle) -->
            <div class="h-32 bg-gradient-to-r from-indigo-500 to-purple-500"></div>
            
            <div class="p-6 relative">
                <!-- Photo de profil -->
                <div class="absolute -top-16 left-6 border-4 border-white rounded-full overflow-hidden w-32 h-32 bg-gray-200">
                    {% if user.profilePicture %}
                        <img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" 
                            alt="{{ user.username }}" 
                            class="w-full h-full object-cover">
                    {% else %}
                        <div class="w-full h-full bg-indigo-600 text-white flex items-center justify-center text-4xl">
                            {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                        </div>
                    {% endif %}
                </div>
                
                <div class="mt-16 flex flex-col md:flex-row md:justify-between md:items-start">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-800">
                            {{ user.firstName }} {{ user.lastName }}
                        </h1>
                        <p class="text-gray-500">@{{ user.username }}</p>
                    </div>
                      <!-- Actions -->
                    <div class="mt-4 md:mt-0 flex gap-2">
                        {% if isOwner %}
                            <a href="{{ path('profile_edit') }}" 
                                class="inline-flex items-center px-4 py-2 border border-indigo-600 text-indigo-600 rounded-md hover:bg-indigo-600 hover:text-white transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                </svg>
                                Modifier mon profil
                            </a>
                            <a href="{{ path('account_settings') }}" 
                                class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                                </svg>
                                Mon compte
                            </a>
                        {% endif %}
                    </div>
                </div>
                
                {% if user.bio %}
                    <div class="mt-6 text-gray-600">
                        <h3 class="font-semibold text-gray-700 mb-2">Bio</h3>
                        <p>{{ user.bio|nl2br }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Posts de l'utilisateur -->
        <div class="mb-8">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Publications de {{ user.firstName }}</h2>
            
            <div class="grid grid-cols-1 gap-6">
                {% for post in posts %}
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <div class="p-6">
                            <div class="flex justify-between items-start">
                                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                                    <a href="{{ path('post_show', {'id': post.id}) }}" class="hover:text-indigo-600">
                                        {{ post.title }}
                                    </a>
                                </h3>
                                  {% if isOwner %}
                                    <div class="flex items-center space-x-2">
                                        <a href="{{ path('post_edit', {'id': post.id}) }}" class="text-blue-500 hover:text-blue-700">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                            </svg>
                                        </a>
                                        <form method="post" action="{{ path('post_delete', {'id': post.id}) }}" 
                                            onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                            <button type="submit" class="text-red-500 hover:text-red-700">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="text-sm text-gray-500 mb-4">
                                {{ post.createdAt|date('d M Y à H:i') }}
                            </div>
                            
                            {% if post.images|length > 0 %}
                                <div class="mb-4 h-48 overflow-hidden rounded-lg">
                                    <img src="{{ asset(post.mainImage.path) }}" 
                                        alt="{{ post.title }}" 
                                        class="w-full h-full object-cover">
                                </div>
                            {% endif %}
                            
                            <div class="text-gray-600 line-clamp-3 mb-4">
                                {{ post.content|striptags|slice(0, 250) }}{% if post.content|length > 250 %}...{% endif %}
                            </div>
                            
                            <a href="{{ path('post_show', {'id': post.id}) }}" 
                                class="text-indigo-600 hover:text-indigo-800 font-medium">
                                Lire la suite
                            </a>
                        </div>
                    </div>
                {% else %}                    <div class="bg-white p-8 rounded-lg shadow-sm text-center">
                        <p class="text-gray-500">{{ user.username }} n'a pas encore publié de posts.</p>
                        {% if isOwner %}
                            <a href="{{ path('post_new') }}" class="mt-4 inline-block text-indigo-600 hover:text-indigo-800 font-medium">
                                Créer votre premier post
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}